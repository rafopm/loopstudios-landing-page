<style>
    .header {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1;
    }

    .container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .img-logo-nav {
        width: 145px;
        height: 25px;
    }

    .img-logo {
        width: 145px;
        height: 25px;
    }

    .img-hamburger {
        width: 25px;
        height: 15px;
        cursor: pointer;
    }

    .img-close {
        display: none;
        width: 25px;
        height: 15px;
        cursor: pointer;
    }

    nav {
        position: absolute;
        top: 40px;
        left: 25px;
        z-index: 1;
    }

    nav a {
        display: flex;
        width: 100%;
        align-items: center;
        justify-content: center;
    }

    nav ul {
        display: none;
        list-style: none;
        padding: 0;
        margin: 0;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        height: 100%;
    }

    nav ul li {
        margin-bottom: 10px;
        font-family: var(--ff-alata);
        font-weight: 400;
        font-size: 1.2rem;
    }

    nav ul li a {
        text-decoration: none;
        color: var(--white);
    }

    #nav-toggle {
        display: none;
    }

    .toggle {
        position: absolute;
        z-index: 2;
        height: 25px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        top: 40px;
        right: 25px;
    }

    #nav-toggle:checked ~ nav a .img-logo-nav {
        margin-top: 150px;
        align-items: center;
        margin-bottom: 60px;
    }

    #nav-toggle:checked ~ nav {
        position: absolute;
        width: 100%;
        display: block;
        height: 100vh;
        background-color: var(--black);
        top: 0;
        left: 0;
    }

    #nav-toggle:checked ~ nav ul {
        display: flex;
    }

    #nav-toggle:checked ~ label .img-hamburger {
        display: none;
    }

    #nav-toggle:checked ~ label .img-close {
        display: block;
    }

    @media (min-width: 360px) {
      
    }

    @media (min-width: 1024px) {
        .container {
            width: 100%;

            max-width: 1110px;

            margin: 0 auto;
            margin-top: 65px;
        }
        .toggle {
            display: none;
        }

        .logo-container {
            margin: 0;
        }

        nav {
            display: flex;
            flex-direction: row;
            position: relative;
            background-color: transparent;
            height: auto;
            justify-content: space-between;
            width: 100%;
            max-width: 100%;
            align-items: center;
            top: 0;
            left: 0;
        }

        nav a {
            justify-content: flex-start;
            width: auto;
        }

        nav ul {
            flex-direction: row;
            gap: 35px;
            display: flex;
            padding: 0;
            margin: 0;
        }

        nav ul li {
            font-size: 15px;
            margin-bottom: 0;
        }

        .img-logo-nav {
            width: 195px;
            height: 35px;
            margin-top: 0;
            margin-bottom: 0;

        }
    }
</style>

<section class="header">
    <div class="container">
        <input type="checkbox" id="nav-toggle" />

        <label for="nav-toggle" class="toggle">
            <img
                src="/loopstudios-landing-page/images/icons/hamburger.svg"
                alt=""
                class="img-hamburger"
            />
            <img
                src="/loopstudios-landing-page/images/icons/close.svg"
                alt=""
                class="img-close"
            />
        </label>

        <nav>
            <a href="/loopstudios-landing-page/">
                <img
                    src="/loopstudios-landing-page/images/logo.svg"
                    alt=""
                    class="img-logo-nav"
                />
            </a>
            <ul>
                <li><a href="#">About</a></li>
                <li><a href="#">Careers</a></li>
                <li><a href="#">Events</a></li>
                <li><a href="#">Products</a></li>
                <li><a href="#">Support</a></li>
            </ul>
        </nav>
    </div>
</section>
